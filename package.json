{
  "name": "mfe-demo",
  "version": "1.0.0",
  "private": true,
  "description": "An MFE architecture demo using React, TypeScript, React Router, Amplify and Cognito",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:container\" \"yarn dev:home\" \"yarn dev:preferences\" \"yarn dev:account\" \"yarn dev:admin\"",
    "dev:container": "yarn workspace @mfe-demo/container dev",
    "dev:home": "yarn workspace @mfe-demo/home dev",
    "dev:preferences": "yarn workspace @mfe-demo/preferences dev",
    "dev:account": "yarn workspace @mfe-demo/account dev",
    "dev:admin": "yarn workspace @mfe-demo/admin dev",
    "build": "yarn build:shared-hooks && yarn build:container && yarn build:home && yarn build:preferences && yarn build:account && yarn build:admin",
    "build:shared-hooks": "yarn workspace @mfe-demo/shared-hooks build",
    "build:container": "yarn workspace @mfe-demo/container build",
    "build:home": "yarn workspace @mfe-demo/home build",
    "build:preferences": "yarn workspace @mfe-demo/preferences build",
    "build:account": "yarn workspace @mfe-demo/account build",
    "build:admin": "yarn workspace @mfe-demo/admin build",
    "preview": "concurrently \"yarn preview:container\" \"yarn preview:home\" \"yarn preview:preferences\" \"yarn preview:account\" \"yarn preview:admin\"",
    "preview:container": "yarn workspace @mfe-demo/container preview",
    "preview:home": "yarn workspace @mfe-demo/home preview",
    "preview:preferences": "yarn workspace @mfe-demo/preferences preview",
    "preview:account": "yarn workspace @mfe-demo/account preview",
    "preview:admin": "yarn workspace @mfe-demo/admin preview",
    "prod:local": "node scripts/run-production-local.js",
    "test": "node scripts/test-with-summary.js",
    "test:unit": "yarn workspace @mfe-demo/container test:unit",
    "test:unit:all": "yarn test:unit:container && yarn test:unit:home && yarn test:unit:preferences && yarn test:unit:account && yarn test:unit:admin",
    "test:unit:container": "yarn workspace @mfe-demo/container test:unit",
    "test:unit:home": "yarn workspace @mfe-demo/home test:unit",
    "test:unit:preferences": "yarn workspace @mfe-demo/preferences test:unit",
    "test:unit:account": "yarn workspace @mfe-demo/account test:unit",
    "test:unit:admin": "yarn workspace @mfe-demo/admin test:unit",
    "test:coverage:container": "yarn workspace @mfe-demo/container test:unit --coverage",
    "test:e2e": "yarn workspace @mfe-demo/container test:e2e",
    "lint": "eslint \"apps/**/*.{ts,tsx}\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "rm -rf node_modules && cd apps/container && rm -rf node_modules dist && cd ../home && rm -rf node_modules dist && cd ../preferences && rm -rf node_modules dist && cd ../account && rm -rf node_modules dist && cd ../admin && rm -rf node_modules dist"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.56.0"
  }
}
